{
  "name": "pubman-ui",
  "productName": "PubMan",
  "version": "0.1.0",
  "private": true,
  "main": "build/main.js",
  "author": "DrawnToDigital <contact@drawnto.digital>",
  "description": "Publishing Manager for 3D Designs",
  "scripts": {
    "next:dev": "next dev",
    "next:build": "next build",
    "next:start": "next start",
    "next:lint": "next lint",
    "format": "dprint fmt",
    "postinstall": "electron-builder install-app-deps && npm run install:better-sqlite3:all",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "electron:dist": "electron-builder --dir",
    "electron:dist:deb": "electron-builder --linux deb",
    "electron:build": "tsup",
    "build": "run-s next:build electron:build",
    "dist": "run-s next:build electron:dist",
    "dev": "npm-run-all --parallel next:dev electron:dev",
    "electron:build_watch": "tsup --watch",
    "electron:dev": "npm-run-all --parallel electron:build_watch electron:watch",
    "electron:watch": "cross-env NODE_ENV='development' nodemon",
    "install:better-sqlite3:x64": "npm rebuild better-sqlite",
    "install:better-sqlite3:arm64": "npm_config_arch=arm64 npm install better-sqlite3 --prefix node_modules/better-sqlite3-arm64 --build-from-source --runtime=electron --target=35.2.1 --dist-url=https://electronjs.org/headers",
    "install:better-sqlite3:all": "npm-run-all install:better-sqlite3:x64 install:better-sqlite3:arm64"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-slot": "^1.2.0",
    "better-sqlite3": "^11.9.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-serve": "^2.1.1",
    "get-port-please": "^3.1.2",
    "lucide-react": "^0.488.0",
    "next": "15.3.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.55.0",
    "tailwind-merge": "^3.2.0",
    "tw-animate-css": "^1.2.5",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.17.30",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-config-next": "15.3.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.4",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  }
}
